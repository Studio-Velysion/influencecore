# Exemple de config pour le dev local (Windows)
# Copie ce fichier vers: config/dev.env
#
# IMPORTANT:
# - Ne commit jamais config/dev.env (il est ignoré par .gitignore)
# - Pas de "/" final sur les URLs

FRONTEND_URL=http://localhost:4200
MAIN_URL=http://localhost:4200
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
BACKEND_INTERNAL_URL=http://localhost:3000

# Dev en HTTP (cookies non-secure)
NOT_SECURED=true

STORAGE_PROVIDER=local

# Postgres / Redis (si tu utilises docker-compose.dev.yaml)
DATABASE_URL=postgresql://postiz-local:postiz-local-pwd@localhost:5432/postiz-db-local?schema=public
REDIS_URL=redis://localhost:6379

# Auth (remplace par une valeur forte)
JWT_SECRET=CHANGE_ME

# Valeurs "safe" côté frontend (optionnelles)
NEXT_PUBLIC_POLOTNO=
NEXT_PUBLIC_DISCORD_SUPPORT=
NEXT_PUBLIC_POSTIZ_OAUTH_LOGO_URL=
NEXT_PUBLIC_POSTIZ_OAUTH_DISPLAY_NAME=
NEXT_PUBLIC_UPLOAD_STATIC_DIRECTORY=/uploads
NEXT_PUBLIC_TOLT=
NEXT_PUBLIC_FACEBOOK_PIXEL=
TELEGRAM_BOT_NAME=
NEYNAR_CLIENT_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

IS_GENERAL=
POSTIZ_BASE_PATH=
DISABLE_REGISTRATION=
DISABLE_IMAGE_COMPRESSION=
DISABLE_X_ANALYTICS=


